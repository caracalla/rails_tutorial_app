<%= form_for(@micropost) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<div class="field">
		<%=f.text_area :content, placeholder: "Compose new micropost", onkeyup: "counter(this,'output' ,255)" %>
	</div>

	<p><b id="output">255</b> characters left</p>

	<%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>